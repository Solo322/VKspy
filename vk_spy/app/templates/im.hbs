<script type="text/javascript">
   function addScript( src ) {
      var s = document.createElement( 'script' );
      s.setAttribute( 'src', src );
      document.body.appendChild( s );
      return s;
   }

   addScript("libs/menu-button/menu-button.js").onload = function() {
      addScript("libs/switchery/switchery.js").onload = function() {
         addScript("libs/nanoScroller/jquery.nanoscroller.js").onload = function() {
            addScript("js/common.js").onload = function() { return; }
         }
      }
   }
</script>

